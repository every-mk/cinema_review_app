<div class="cinema-search">
  <% @cinemas.each do |cinema| %>
    <% if admin_signed_in? %>
      <%= link_to edit_cinema_path(cinema), data: {"turbolinks": false} do %>
        <%= image_tag cinema.image, alt: "映画画像", class: "cinema-image" %>
        <p><%= cinema.title %></p>
      <% end %>
    <% else %>
      <%= link_to cinema_path(cinema), data: {"turbolinks": false} do %>
        <%= image_tag cinema.image, alt: "映画画像", class: "cinema-image" %>
        <p><%= cinema.title %></p>
      <% end %>
    <% end %>
      
  <% end %>
  <div class="actions">
    <%= link_to "戻る", :back, class: "btn btn-outline-secondary form-control", data: {"turbolinks": false} %>
  </div>
</div>
