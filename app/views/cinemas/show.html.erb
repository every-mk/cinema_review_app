
<div class="container cinema cinema-show">
  <div class="cinema-show-view">
    <div class="cinema-inner">
      <div class="create-content">
        <div class="offset">
          <div class="icon-box">
            <%= image_tag @cinema.image, alt: "映画画像", class: "icon-image host-icon" %>
          </div>
        </div>
        <div class="create-content">
          <%= label :cinema, :title %><br />
          <p class="cinema-title"><%= @cinema.title %></p>
        </div>
        <div class="create-content">
          <%= label :cinema, :screen_time %><br />
          <p class="cinema-screen-time"><%= l @cinema.screen_time, format: :time %></p>
        </div>
        <div class="create-content">
          <%= label :cinema, :birthplace %><br />
          <p class="cinema-birthplace"><%= @cinema.birthplace %></p>
        </div>
        <div class="create-content">
          <%= label :cinema, :movie_rating %><br />
          <p class="cinema-movie-rating"><%= @cinema.movie_rating %></p>
        </div>
        <div class="create-content">
          <%= label :cinema, :director %><br />
          <p class="cinema-director"><%= @cinema.director %></p>
        </div>
        <div class="create-content">
          <%= label :cinema, :original %><br />
          <p class="cinema-original"><%= @cinema.original %></p>
        </div>
        <div class="create-content">
          <%= label :cinema, :appearance %><br />
           <p class="cinema-appearance"><%= @cinema.appearance %></p>
        </div>
        <div class="create-content">
          <%= label :cinema, :screenwriter %><br />
          <p class="cinema-screenwriter"><%= @cinema.screenwriter %></p>
        </div>
        <div class="create-content">
          <%= label :cinema, :distribution %><br />
          <p class="cinema-distribution"><%= @cinema.distribution %></p>
        </div>
        <div class="create-content">
          <%= label :cinema, :start_date %><br />
          <p class="cinema-start-date"><%= l @cinema.start_date %></p>
        </div>
        <div class="create-content">
          <%= label :cinema, :story %><br />
          <p class="cinema-story"><%= @cinema.story %></p>
        </div>
      </div>

      <div class="actions use-border">
        <% if @review.present? %>
          <%= link_to "レビューを編集する", edit_review_path(@review) , data: {"turbolinks": false} %>
        <% elsif current_user.present? %>
          <%= link_to "レビューを書く", new_review_path(cinema_id: @cinema.id), data: {"turbolinks": false} %>
        <% end %>
      </div>
      <div class="actions">
        <%= link_to "戻る", :back, class: "btn btn-outline-secondary form-control", data: {"turbolinks": false} %>
      </div>
    </div>
  </div>
</div>
