<div class="container user-registration-edit">
  <div class="user-frame">
    <h1>アカウント編集</h1>
    <div class="user-inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <div class="form-group">
            <%= f.label "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力してください", class: "form-control" %>
          </div>
        </div>

        <div class="field">
          <div class="form-group">
            <%= f.label "変更後パスワード（変更する場合のみ入力）" %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="field">
          <div class="form-group">
            <%= f.label "パスワード確認用（変更する場合のみ入力）" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="field">
          <div class="form-group">
            <%= f.label "現在のパスワード" %><br />
            <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワードを入力", class: "form-control" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "更新", class: "form-control btn-primary" %>
        </div>

        <div class="actions">
          <%= link_to "戻る", :back, class: "btn btn-outline-secondary form-control", data: {"turbolinks": false} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
